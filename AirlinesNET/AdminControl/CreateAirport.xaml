<Window x:Class="AirlinesNET.AdminControl.CreateAirport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AirlinesNET.AdminControl"
        mc:Ignorable="d"
        Title="Новый аэропорт" Height="260.57" Width="300">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Наименование*:" VerticalAlignment="Top"/>
        <TextBox x:Name="nameField" Height="23" Margin="10,31,10,0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,61,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Text="Страна"/><Run Text=":"/></TextBlock>
        <TextBox x:Name="countryField" Height="23" Margin="10,82,10,0" VerticalAlignment="Top"/>
        <Button x:Name="saveButton" Click="saveButton_Click" Content="Сохранить" Margin="10,178,10,10"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,115,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Text="Город"/><Run Text="/"/><Run Text="нас."/><Run Text=" пункт"/><Run Text=":"/></TextBlock>
        <TextBox x:Name="cityField" Height="23" Margin="10,136,10,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
